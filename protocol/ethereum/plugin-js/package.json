{
  "name": "@blockwatch-cc/ethereum-signer-plugin-js",
  "description": "Ethereum Signer Polywrap JS Plugin",
  "version": "0.2.0",
  "license": "MIT",
  "main": "build/index.js",
  "files": [
    "build",
    "schema.graphql"
  ],
  "scripts": {
    "build": "rimraf ./build && yarn codegen && tsc --project tsconfig.build.json",
    "codegen": "node ./node_modules/polywrap/bin/polywrap plugin codegen",
    "codegen:app": "npx polywrap app codegen -m src/__tests__/types/polywrap.app.yaml -g src/__tests__/types/wrap",
    "lint": "eslint --color --ext .ts src/",
    "test": "yarn codegen:app && jest --passWithNoTests --runInBand --verbose",
    "test:ci": "jest --passWithNoTests --runInBand --verbose",
    "test:watch": "jest --watch --passWithNoTests --verbose"
  },
  "dependencies": {
    "@ethersproject/address": "5.0.7",
    "@ethersproject/providers": "5.0.7",
    "polywrap": "0.2.0",
    "@polywrap/core-js": "0.2.0",
    "ethers": "5.0.7"
  },
  "devDependencies": {
    "@types/jest": "26.0.8",
    "@polywrap/client-js": "0.2.0",
    "@polywrap/test-env-js": "0.2.0",
    "eth-ens-namehash": "2.0.8",
    "jest": "26.6.3",
    "js-sha3": "0.8.0",
    "rimraf": "3.0.2",
    "ts-jest": "26.5.4",
    "ts-node": "8.10.2",
    "typescript": "4.6.2"
  },
  "publishConfig": {
    "access": "public"
  }
}
